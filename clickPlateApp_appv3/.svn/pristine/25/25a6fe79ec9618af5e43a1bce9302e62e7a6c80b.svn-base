        <script type="text/javascript" src="plugins/gmap/gmap3.js"></script>

        <style>
          .gmap3{
            margin: 20px auto;
            border: 1px dashed #C0C0C0;
            width: 800px;
            height: 500px;
          }

          .test1-result{
            text-align:center;
          }
        </style>
    </body>
</html>
